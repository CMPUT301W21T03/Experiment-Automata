<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddExperimentFragment"
    android:paddingHorizontal="20dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_experiment_description_editText"
        android:hint="@string/description"
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:background="@color/lgray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/experiment_min_trials_editText"
        android:hint="@string/minimum_number_of_trials"
        android:inputType="number"
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:background="@color/lgray"/>

    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trial Type:"/>

    <!--Shadow on Spinner found on stackoverflow from user45678 on June 6, 2017-->
    <!--https://stackoverflow.com/questions/44387373/how-to-add-shadow-in-dropdown-spinner-in-android -->
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:id="@+id/experiment_type_spinner"
        android:paddingVertical="20dp"
        android:paddingLeft="10dp"
        android:popupBackground="@android:drawable/dialog_holo_light_frame"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/experiment_require_location_switch"
        android:text="@string/require_location"
        android:paddingLeft="10dp"
        android:paddingVertical="20dp"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/experiment_accept_new_results_switch"
        android:text="@string/accept_new_results"
        android:paddingLeft="10dp"
        android:paddingVertical="10dp"/>
</LinearLayout>